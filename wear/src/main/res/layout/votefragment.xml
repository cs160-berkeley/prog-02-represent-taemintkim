<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#05302c"
    android:id="@+id/votefraglayout">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart1"
        android:layout_width="210dp"
        android:layout_height="120dp"
        android:layout_below="@+id/votetitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:textAppearance="@style/TextView.Medium"
        android:text="2012 Presidential Election Votes at Alameda County, CA"
        android:id="@+id/votetitle"
        android:textColor="#ffffff"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="gravity"
        android:gravity="center_horizontal"
        android:textSize="13dp" />

</RelativeLayout>